{
  "name": "blog",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "optimize-images": "node src/features/image-optimization/scripts/optimize-images.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:unit": "vitest run --exclude='src/__tests__/integration/**'",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:build": "vitest run src/__tests__/integration/build.test.ts",
    "test:xml": "vitest run src/__tests__/integration/xml-validation.test.ts",
    "test:content": "vitest run src/__tests__/integration/content-validation.test.ts",
    "test:endpoints": "vitest run src/__tests__/integration/endpoints.test.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run test:unit && npm run build && npm run test:build && npm run test:xml && npm run test:content",
    "test:seo": "vitest run src/__tests__/seo/",
    "test:seo:production": "vitest run src/__tests__/seo/production.test.ts",
    "test:seo:meta": "vitest run src/__tests__/seo/meta-tags.test.ts",
    "test:seo:schema": "vitest run src/__tests__/seo/schema.test.ts",
    "test:seo:performance": "vitest run src/__tests__/seo/performance.test.ts",
    "optimize:css": "node scripts/optimize-css-classes.js",
    "pagespeed": "node scripts/pagespeed-analyzer.js",
    "pagespeed:all": "node scripts/pagespeed-analyzer.js -- --predefined --save",
    "pagespeed:mobile": "node scripts/pagespeed-analyzer.js -- --predefined --mobile --save",
    "test:schemas": "npm run test -- schema.test.ts",
    "validate:schemas": "node src/features/schema/scripts/validate-schemas.js",
    "validate:schemas:dev": "npm run validate:schemas -- --dev",
    "validate:schemas:auto": "npm run validate:schemas -- --auto",
    "test:schemas:full": "npm run test:schemas && npm run validate:schemas:dev",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:production": "npm run build && wrangler pages deploy dist --env production",
    "deploy:dev": "npm run build && wrangler pages deploy dist --env development",
    "wrangler:login": "wrangler login",
    "wrangler:list": "wrangler pages project list",
    "wrangler:info": "wrangler pages project show cappato-blog",
    "wrangler:setup": "node scripts/setup-wrangler.js"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "astro": "^5.8.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@vitest/ui": "^3.1.4",
    "@xmldom/xmldom": "^0.9.8",
    "autoprefixer": "^10.4.16",
    "canvas": "^3.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "sharp": "^0.33.2",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.19.4",
    "vitest": "^3.1.4",
    "wrangler": "^3.78.12",
    "yargs": "^17.7.2"
  }
}

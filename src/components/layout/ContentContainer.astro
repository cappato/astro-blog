---
interface Props {
  className?: string;
  as?: 'div' | 'section' | 'main' | 'article';
  padding?: boolean;
}

const {
  className = '',
  as: Element = 'div',
  padding = true
} = Astro.props;

// CONTENEDOR PRINCIPAL - Solo container + padding
// NO incluye max-width para evitar anidamiento problem√°tico
const paddingClasses = padding ? 'px-6 sm:px-4' : '';
const containerClasses = `container mx-auto ${paddingClasses} ${className}`.trim();
---

<Element class={containerClasses}>
  <slot />
</Element>

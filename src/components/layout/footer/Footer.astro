---
import Icon from '../../ui/Icon.astro';

// Datos del footer centralizados
const currentYear = new Date().getFullYear();
const socialLinks = [
  {
    href: "https://github.com/cappato",
    icon: "github" as const,
    label: "GitHub Profile",
    external: true
  },
  {
    href: "https://www.linkedin.com/in/matiascappato/",
    icon: "linkedin" as const,
    label: "LinkedIn Profile",
    external: true
  },
  {
    href: "mailto:matias@cappato.dev",
    icon: "email" as const,
    label: "Email",
    external: false
  }
];
---

<!-- Footer -->
<footer class="py-8 mt-16 bg-secondary">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0 text-secondary">
                &copy; {currentYear} Matías Sebastián Cappato. All rights reserved.
            </div>
            <div class="flex space-x-6">
                {socialLinks.map(link => (
                    <a
                        href={link.href}
                        {...(link.external && {
                            target: "_blank",
                            rel: "noopener noreferrer"
                        })}
                        class="inline-block p-2 text-secondary hover:text-primary transition-colors footer-social-link"
                        aria-label={link.label}
                    >
                        <Icon name={link.icon} size={24} />
                    </a>
                ))}
            </div>
        </div>
    </div>
</footer>


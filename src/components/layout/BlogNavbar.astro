---
import NavbarBase from './NavbarBase.astro';
import Logo from '../ui/Logo.astro';
import ThemeToggle from '../ui/ThemeToggle.astro';

interface Props {
  currentPath?: string;
}

const { currentPath = '/blog' } = Astro.props;

// Determinar si estamos en la página principal del blog o en un post
const isMainBlogPage = currentPath === '/blog';
---

<nav class="sticky top-0 z-10 bg-gray-50 dark:bg-gray-800 shadow-md transition-colors duration-300">
  <div class="container mx-auto px-6 sm:px-4 py-3">
    <div class="flex justify-between items-center">
      <!-- Logo y título (común en ambos navbars) -->
      <a href="/" class="flex items-center gap-3">
        <Logo size="medium" />
        <span class="text-primary text-2xl font-bold">Matías S. Cappato</span>
      </a>

      <div class="flex items-center gap-3">
        <ThemeToggle size="md" />

        {isMainBlogPage ? (
          <span class="text-secondary font-medium px-4 py-2 rounded-md bg-gray-200 dark:bg-gray-700">Blog</span>
        ) : (
          <a href="/blog" class="text-secondary font-medium px-4 py-2 rounded-md bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition-all duration-200">Blog</a>
        )}
      </div>
    </div>
  </div>
</nav>

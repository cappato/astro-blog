---
import BaseNavbar from './BaseNavbar.astro';
import Icon from '../../ui/Icon.astro';
import NavLink from '../navigation/NavLink.astro';
import { NAVIGATION_CONFIG } from '../../../config/site.ts';

// Use centralized navigation configuration
const navItems = NAVIGATION_CONFIG.homeNavItems;
---

<BaseNavbar>
  <!-- Navegación principal para página home -->
  <div slot="navigation" class="hidden md:block">
    <ul class="flex space-x-4 lg:space-x-6">
      {navItems.map(item => (
        <li>
          <NavLink
            href={item.href}
            section={item.section}
            className="nav-link px-3 py-2 rounded-md hover:bg-button text-content hover:text-primary transition-all duration-200 flex items-center"
          >
            {item.label}
          </NavLink>
        </li>
      ))}
    </ul>
  </div>

  <!-- Botón menú móvil -->
  <button slot="actions" class="md:hidden text-primary-content hover:text-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-surface-800 p-2 rounded-lg" id="mobile-menu-button">
    <span class="sr-only">Abrir menú de navegación</span>
    <Icon name="menu" size={24} />
  </button>

  <!-- Menú móvil usando slot additional -->
  <div slot="additional" id="mobile-menu" class="fixed inset-0 bg-surface-900 bg-opacity-95 z-50 hidden">
  <div class="flex flex-col h-full">
    <div class="flex justify-end p-4">
      <button id="close-menu" class="text-primary-content hover:text-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-surface-900 p-2 rounded-full hover:bg-surface-800 transition-all duration-200">
        <Icon name="close" size={24} />
      </button>
    </div>
    <div class="flex-1 flex flex-col items-center justify-center space-y-6 text-xl">
      {navItems.map(item => (
        <NavLink
          href={item.href}
          section={item.section}
          className="nav-link-mobile px-5 py-3 rounded-md hover:bg-button text-content hover:text-primary transition-all duration-200 w-64 text-center"
        >
          {item.label}
        </NavLink>
      ))}
    </div>
  </div>
  </div>
</BaseNavbar>

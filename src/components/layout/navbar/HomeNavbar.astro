---
import BaseNavbar from './BaseNavbar.astro';
import Icon from '../../ui/Icon.astro';
import NavLink from '../navigation/NavLink.astro';
import { NAVIGATION_CONFIG } from '../../../config/site.ts';

// Use centralized navigation configuration
const navItems = NAVIGATION_CONFIG.homeNavItems;
---

<BaseNavbar>
  <!-- Navegación principal para página home -->
  <div slot="navigation" class="hidden md:block">
    <ul class="flex space-x-4">
      {navItems.map(item => (
        <li>
          <NavLink
            href={item.href}
            section={item.section}
            className="px-3 py-2 flex items-center"
          >
            {item.label}
          </NavLink>
        </li>
      ))}
    </ul>
  </div>

  <!-- Botón menú móvil -->
  <button slot="actions" class="md:hidden p-2" id="mobile-menu-button">
    <span class="sr-only">Abrir menú de navegación</span>
    <Icon name="menu" size={24} />
  </button>

  <!-- Menú móvil usando slot additional -->
  <div slot="additional" id="mobile-menu" class="fixed inset-0 z-50 hidden bg-primary">
  <div class="flex flex-col h-full">
    <div class="flex justify-end p-4">
      <button id="close-menu" class="p-2 text-primary hover:text-secondary transition-colors">
        <Icon name="close" size={24} />
      </button>
    </div>
    <div class="flex-1 flex flex-col items-center justify-center space-y-6 text-xl">
      {navItems.map(item => (
        <NavLink
          href={item.href}
          section={item.section}
          className="nav-link-mobile px-5 py-3 w-64 text-center text-primary hover:text-secondary transition-colors"
        >
          {item.label}
        </NavLink>
      ))}
    </div>
  </div>
  </div>
</BaseNavbar>

---
import Logo from '../../ui/Logo.astro';
import ThemeToggle from '../../ui/ThemeToggle.astro';

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<nav class={`sticky top-0 z-10 bg-surface-800 shadow-md ${className}`}>
  <div class="container mx-auto px-6 sm:px-4 py-3">
    <div class="flex justify-between items-center">
      <!-- Logo y título (común en todas las páginas) -->
      <a href="/" class="flex items-center gap-3 hover:opacity-90 transition-opacity">
        <Logo size="medium" />
        <span class="text-primary text-2xl font-bold">Matías S. Cappato</span>
      </a>

      <!-- Slot para navegación específica de cada página -->
      <slot name="navigation" />

      <!-- Acciones del navbar (theme toggle + acciones adicionales) -->
      <div class="flex items-center gap-3">
        <!-- Theme toggle (siempre visible) -->
        <ThemeToggle size="md" />

        <!-- Slot para acciones adicionales (botones, etc.) -->
        <slot name="actions" />
      </div>
    </div>
  </div>
</nav>

<!-- Slot para contenido adicional (menú móvil, overlays, etc.) -->
<slot name="additional" />

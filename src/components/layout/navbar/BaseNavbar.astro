---
import Logo from '../../ui/Logo.astro';
import { ThemeToggle } from '../../../features/dark-light-mode/components';

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<nav class={`fixed top-0 left-0 right-0 z-50 bg-white border-b backdrop-blur-sm ${className}`}>
  <div class="container mx-auto px-6 py-3">
    <div class="flex justify-between items-center">
      <!-- Logo y título (común en todas las páginas) -->
      <a href="/" class="flex items-center gap-3">
        <Logo size="medium" />
        <span class="text-2xl font-bold">Matías S. Cappato</span>
      </a>

      <!-- Slot para navegación específica de cada página -->
      <slot name="navigation" />

      <!-- Acciones del navbar (acciones adicionales + theme toggle) -->
      <div class="flex items-center gap-3">
        <!-- Slot para acciones adicionales (botones, etc.) -->
        <slot name="actions" />

        <!-- Theme toggle (siempre al final) -->
        <ThemeToggle size="md" />
      </div>
    </div>
  </div>
</nav>

<!-- Slot para contenido adicional (menú móvil, overlays, etc.) -->
<slot name="additional" />

---
import BaseNavbar from './BaseNavbar.astro';

interface Props {
  currentPath?: string;
}

const { currentPath = '/blog' } = Astro.props;

// Determinar si estamos en la página principal del blog o en un post
const isMainBlogPage = currentPath === '/blog';
---

<BaseNavbar>
  <!-- Botón Blog en la zona de acciones (al lado del toggle) -->
  <div slot="actions">
    {isMainBlogPage ? (
      <span class="font-medium px-3 py-2 text-primary">Blog</span>
    ) : (
      <a href="/blog" class="font-medium px-3 py-2 flex items-center text-primary hover:text-secondary transition-colors">Blog</a>
    )}
  </div>
</BaseNavbar>

---
import BaseNavbar from './BaseNavbar.astro';

interface Props {
  currentPath?: string;
}

const { currentPath = '/blog' } = Astro.props;

// Determinar si estamos en la página principal del blog o en un post
const isMainBlogPage = currentPath === '/blog';
---

<BaseNavbar>
  <!-- Botón Blog en la zona de acciones (al lado del toggle) -->
  <div slot="actions">
    {isMainBlogPage ? (
      <span class="text-primary font-medium px-3 py-2 rounded-md bg-primary/10 border border-primary/20">Blog</span>
    ) : (
      <a href="/blog" class="text-content hover:text-primary font-medium px-3 py-2 rounded-md hover:bg-button transition-all duration-200 flex items-center">Blog</a>
    )}
  </div>
</BaseNavbar>

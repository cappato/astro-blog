---
import BaseNavbar from './BaseNavbar.astro';

interface Props {
  currentPath?: string;
}

const { currentPath = '/blog' } = Astro.props;

// Determinar si estamos en la página principal del blog o en un post
const isMainBlogPage = currentPath === '/blog';
---

<BaseNavbar>
  <!-- Botón Blog en la zona de acciones (al lado del toggle) -->
  <div slot="actions">
    {isMainBlogPage ? (
      <span class="text-blue-600 dark:text-blue-400 font-medium px-3 py-2 rounded-md bg-blue-600/10 dark:bg-blue-500/10 border border-blue-600/20 dark:border-blue-500/20">Blog</span>
    ) : (
      <a href="/blog" class="text-content hover:text-blue-600 dark:text-blue-400 font-medium px-3 py-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-200 flex items-center">Blog</a>
    )}
  </div>
</BaseNavbar>

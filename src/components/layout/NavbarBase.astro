---
import Logo from '../ui/Logo.astro';

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;
---

<nav class="sticky top-0 z-10 bg-background-secondary dark:bg-gray-800 shadow-md transition-colors duration-300">
  <div class="container mx-auto px-6 sm:px-4 py-3">
    <div class="flex justify-between items-center">
      <!-- Logo y título (común en ambos navbars) -->
      <a href="/" class="flex items-center gap-3">
        <Logo size="medium" />
        <span class="text-primary text-2xl font-bold">Matías S. Cappato</span>
      </a>

      <!-- Slot para contenido específico de cada navbar -->
      <slot />
    </div>
  </div>
</nav>

<!-- Slot para contenido adicional (como menú móvil) -->
<slot name="additional-content" />

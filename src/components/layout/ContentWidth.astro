---
interface Props {
  width?: 'standard' | 'wide' | 'narrow' | 'full';
  className?: string;
  as?: 'div' | 'section' | 'main' | 'article';
}

const {
  width = 'standard',
  className = '',
  as: Element = 'div'
} = Astro.props;

// Definir los anchos de manera centralizada - MISMO SISTEMA QUE ContentContainer
const widthClasses = {
  standard: 'max-w-4xl mx-auto',    // 896px - Ancho estándar para todo el sitio
  wide: 'max-w-6xl mx-auto',        // 1152px - Para galerías, tablas
  narrow: 'max-w-2xl mx-auto',      // 672px - Para formularios
  full: 'w-full'                    // Ancho completo
};

// Combinar las clases
const contentClasses = `${widthClasses[width]} ${className}`.trim();
---

<Element class={contentClasses}>
  <slot />
</Element>

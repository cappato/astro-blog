---
/**
 * Blog Post Card Component - Unified Structure
 * Estructura unificada para todos los artículos del blog
 * Optimizado con Tailwind CSS y consistente en todas las páginas
 */

import TagList from './TagList.astro';
import type { BlogPostCardData } from '../../utils/blogPost.ts';

interface Props {
  post: BlogPostCardData;
  loading?: 'lazy' | 'eager';
  className?: string;
}

const {
  post,
  loading = 'lazy',
  className = ''
} = Astro.props;

// Imagen por defecto si no hay imagen
const defaultImage = '/images/blog/seo-cover.webp';
const postImage = post.image?.url || defaultImage;
const imageAlt = post.image?.alt || post.title;
---

<!-- Estructura unificada de artículo -->
<article class={`bg-card border border-card rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 h-full flex flex-col ${className}`}>
  <!-- Post Image -->
  <a href={post.url} class="block flex-shrink-0">
    <img
      src={postImage}
      alt={imageAlt}
      class="w-full h-48 object-cover transition-transform duration-300 hover:scale-105"
      loading={loading}
      width="600"
      height="315"
    />
  </a>

  <!-- Post Content -->
  <div class="p-4 flex-1 flex flex-col">
    <!-- Post Title -->
    <h3 class="text-xl font-bold mb-2 line-clamp-2">
      <a href={post.url} class="text-content hover:text-blue-600 dark:text-blue-400 transition-colors">
        {post.title}
      </a>
    </h3>

    <!-- Post Date -->
    <p class="text-secondary text-sm mb-3">
      {post.formattedDate}
    </p>

    <!-- Post Description -->
    <p class="text-secondary mb-4 line-clamp-3 flex-1">
      {post.description}
    </p>

    <!-- Post Tags -->
    {post.tags && post.tags.length > 0 && (
      <div class="mb-4">
        <TagList tags={post.tags} />
      </div>
    )}

    <!-- Read More Link -->
    <div class="mt-auto">
      <a href={post.url} class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium text-sm transition-colors group">
        Leer más
        <svg class="w-4 h-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 16 16" fill="currentColor">
          <path d="M6 4l4 4-4 4" stroke="currentColor" stroke-width="2" fill="none"/>
        </svg>
      </a>
    </div>
  </div>
</article>

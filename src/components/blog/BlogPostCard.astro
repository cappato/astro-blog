---
/**
 * Blog Post Card Component - Simple Structure
 * Basado en la estructura de PillarCard
 */

import type { BlogPostCardData } from '../../utils/blogPost.ts';

interface Props {
  post: BlogPostCardData;
  loading?: 'lazy' | 'eager';
  className?: string;
}

const {
  post,
  loading = 'lazy',
  className = ''
} = Astro.props;

// Imagen por defecto si no hay imagen
const defaultImage = '/images/blog/seo-cover.webp';
const postImage = post.image?.url || defaultImage;
const imageAlt = post.image?.alt || post.title;
---

<article class={`pillar-grid__item ${className}`}>
  <a
    href={post.url}
    class="card-base block rounded-lg overflow-hidden transition-all duration-300 hover:shadow-elevated h-full flex flex-col"
    aria-label={`Leer artículo: ${post.title}`}
  >
    <!-- Thumbnail -->
    <div class="aspect-video overflow-hidden">
      <img
        src={postImage}
        alt={imageAlt}
        class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
        loading={loading}
        width="300"
        height="200"
      />
    </div>

    <!-- Content -->
    <div class="flex-1 p-4 flex flex-col">
      <!-- Header -->
      <header class="mb-3">
        <h3 class="text-lg font-semibold mb-2 line-clamp-2 text-primary">
          {post.title}
        </h3>

        <!-- Meta info -->
        <div class="flex items-center justify-between text-sm text-muted">
          <span class="font-medium">
            {post.formattedDate}
          </span>
        </div>
      </header>

      <!-- Description -->
      <p class="text-secondary mb-4 flex-1 line-clamp-3">
        {post.description}
      </p>

      <!-- Tags -->
      {post.tags && post.tags.length > 0 && (
        <div class="flex flex-wrap gap-1 mb-4">
          {post.tags.slice(0, 3).map(tag => (
            <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded-full text-gray-600 dark:text-gray-300">
              #{tag}
            </span>
          ))}
          {post.tags.length > 3 && (
            <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded-full text-gray-600 dark:text-gray-300">
              +{post.tags.length - 3}
            </span>
          )}
        </div>
      )}
    </div>

    <!-- Footer con CTA -->
    <footer class="p-4 pt-0 mt-auto">
      <span class="inline-flex items-center font-medium text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
        Leer más
        <svg class="w-4 h-4 ml-1" viewBox="0 0 16 16" fill="currentColor">
          <path d="M6 4l4 4-4 4" stroke="currentColor" stroke-width="2" fill="none"/>
        </svg>
      </span>
    </footer>
  </a>
</article>

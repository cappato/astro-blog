---
import BaseTag from '../ui/BaseTag.astro';

interface Props {
  tags: string[];
  className?: string;
  variant?: 'default' | 'compact' | 'large';
}

const { tags, className = '', variant = 'default' } = Astro.props;
---

<div class={`flex flex-wrap gap-2 ${className}`}>
  {tags.map((tag: string) => (
    <BaseTag tag={tag} variant={variant} />
  ))}
</div>


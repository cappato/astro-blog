---
interface Props {
  tags: string[];
  className?: string;
}

const { tags, className = '' } = Astro.props;
---

<div class={`flex flex-wrap gap-2 ${className}`}>
  {tags.map(tag => (
    <a
      href={`/blog/tag/${tag.toLowerCase()}`}
      class="tag-link bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-secondary font-medium text-xs px-2 py-1 rounded-md transition-colors duration-200"
    >
      #{tag}
    </a>
  ))}
</div>

<style>
  /* Estilos espec√≠ficos con alta especificidad */
  .tag-link {
    text-decoration: none;
    background-color: rgba(55, 65, 81, 0.5);
    color: theme('colors.secondary.DEFAULT');
  }

  .tag-link:hover {
    background-color: rgba(55, 65, 81, 0.7);
  }
</style>


---
/**
 * Componente ShareButtons - Wrapper para mantener compatibilidad
 * Redirige al nuevo componente refactorizado con TypeScript
 */

import ShareButtonsNew from './share/ShareButtons.astro';

interface Props {
  url: string;
  title: string;
  compact?: boolean;
  showTitle?: boolean;
}

const { url, title, compact = false, showTitle = true } = Astro.props;
---

<!-- Usar el nuevo componente refactorizado -->
<ShareButtonsNew
  url={url}
  title={title}
  compact={compact}
  showTitle={showTitle}
/>


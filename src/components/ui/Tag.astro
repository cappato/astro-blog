---
interface Props {
  tag: string;
  size?: 'sm' | 'md' | 'lg';
}

const { tag, size = 'sm' } = Astro.props;
const url = `/blog/tag/${tag.toLowerCase()}`;

// Clases según tamaño
const sizeClasses = {
  sm: 'text-xs px-2 py-1',
  md: 'text-sm px-3 py-1.5',
  lg: 'text-base px-4 py-2'
};
---

<a
  href={url}
  class={`tag-link inline-block bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-secondary font-medium ${sizeClasses[size]} rounded-md transition-colors duration-200`}
  aria-label={`Ver artículos con la etiqueta ${tag}`}
>
  #{tag}
</a>

<style>
  /* Estilos específicos con alta especificidad */
  .tag-link {
    text-decoration: none;
    background-color: rgba(55, 65, 81, 0.5);
    color: theme('colors.secondary.DEFAULT');
  }

  .tag-link:hover {
    background-color: rgba(55, 65, 81, 0.7);
  }
</style>



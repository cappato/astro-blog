---
interface Props {
  variant?: 'default' | 'hover' | 'compact';
  className?: string;
  as?: 'div' | 'article' | 'section';
}

const {
  variant = 'default',
  className = '',
  as: Element = 'div'
} = Astro.props;

// Definir las variantes de la card usando solo Tailwind
const variants = {
  default: 'bg-card border border-card rounded-lg shadow-sm p-4 sm:p-6',
  hover: 'bg-card border border-card rounded-lg shadow-sm hover:shadow-sm-hover transition-shadow duration-200 p-4 sm:p-6',
  compact: 'bg-card border border-card rounded-lg shadow-sm p-3 sm:p-4'
};

const cardClasses = `${variants[variant]} ${className}`;
---

<Element class={cardClasses}>
  <slot />
</Element>

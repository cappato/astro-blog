---
interface Props {
  variant?: 'default' | 'hover' | 'compact';
  className?: string;
  as?: 'div' | 'article' | 'section';
}

const { 
  variant = 'default', 
  className = '', 
  as: Element = 'div' 
} = Astro.props;

// Definir las variantes de la card
const variants = {
  default: 'bg-surface-800 rounded-lg p-4 sm:p-6 shadow-card',
  hover: 'bg-surface-800 rounded-lg p-4 sm:p-6 shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1',
  compact: 'bg-surface-800 rounded-lg p-3 sm:p-4 shadow-card'
};

const cardClasses = `${variants[variant]} ${className}`;
---

<Element class={cardClasses}>
  <slot />
</Element>

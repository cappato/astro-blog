---
interface Props {
  variant?: 'default' | 'hover' | 'compact';
  className?: string;
  as?: 'div' | 'article' | 'section';
}

const {
  variant = 'default',
  className = '',
  as: Element = 'div'
} = Astro.props;

// Definir las variantes de la card usando el nuevo sistema de temas
const variants = {
  default: 'card-base p-4 sm:p-6',
  hover: 'card-base card-hover p-4 sm:p-6',
  compact: 'card-base p-3 sm:p-4'
};

const cardClasses = `${variants[variant]} ${className}`;
---

<Element class={cardClasses}>
  <slot />
</Element>

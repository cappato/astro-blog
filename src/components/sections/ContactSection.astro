---
import Icon from '../ui/Icon.astro';
import Card from '../ui/Card.astro';
import ContentContainer from '../layout/ContentContainer.astro';
import ContentWidth from '../layout/ContentWidth.astro';
---

<!-- Contact Section -->
<ContentContainer as="section" id="contact" className="py-10" width="standard">
    <ContentWidth>
        <h2 class="text-3xl font-bold mb-6 pb-2">Contact</h2>
    </ContentWidth>

    <ContentWidth>
        <Card variant="default">
            <ContentWidth width="narrow">
                <h3 class="text-xl sm:text-2xl font-bold mb-4">Get In Touch</h3>
                <p class="mb-8">Feel free to reach out if you'd like to discuss potential opportunities or just want to connect.</p>

                <div class="space-y-6">
                    <div class="flex items-center">
                        <span class="w-8"><Icon name="location" size={20} /></span>
                        <span >Mar del Plata, Buenos Aires, Argentina</span>
                    </div>
                    <div class="flex items-center">
                        <span class="w-8"><Icon name="email" size={20} /></span>
                        <a href="mailto:matias@cappato.dev" >matias@cappato.dev</a>
                    </div>
                    <div class="flex items-center">
                        <span class="w-8"><Icon name="github" size={20} /></span>
                        <a href="https://github.com/cappato" >github.com/cappato</a>
                    </div>
                    <div class="flex items-center">
                        <span class="w-8"><Icon name="linkedin" size={20} /></span>
                        <a href="https://www.linkedin.com/in/matiascappato/" >linkedin.com/in/matiascappato</a>
                    </div>
                </div>

                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="https://github.com/cappato" class="px-3 py-2 flex items-center text-sm sm:text-base font-medium">
                        <span class="mr-2"><Icon name="github" size={18} /></span> GitHub Profile
                    </a>
                    <a href="https://www.linkedin.com/in/matiascappato/" class="px-3 py-2 flex items-center text-sm sm:text-base font-medium">
                        <span class="mr-2"><Icon name="linkedin" size={18} /></span> LinkedIn
                    </a>
                    <a href="mailto:matias@cappato.dev"
                       class="px-3 py-2 flex items-center text-sm sm:text-base font-medium"
                       aria-label="Enviar correo electrÃ³nico">
                        <span class="mr-2"><Icon name="email" size={18} /></span> Send Email
                    </a>
                </div>
            </ContentWidth>
        </Card>
    </ContentWidth>
</ContentContainer>



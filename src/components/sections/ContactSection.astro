---
import Icon from '../ui/Icon.astro';
import Card from '../ui/Card.astro';
import ContentContainer from '../layout/ContentContainer.astro';
import ContentWidth from '../layout/ContentWidth.astro';
---

<!-- Contact Section -->
<ContentContainer as="section" id="contact" className="py-10 bg-primary" width="standard">
    <ContentWidth>
        <h2 class="text-3xl font-bold mb-6 pb-2 text-primary">Contact</h2>
    </ContentWidth>

    <ContentWidth>
        <Card variant="default">
            <ContentWidth width="narrow">
                <h3 class="text-xl sm:text-2xl font-bold mb-4 text-primary">Get In Touch</h3>
                <p class="mb-8 text-secondary">Feel free to reach out if you'd like to discuss potential opportunities or just want to connect.</p>

                <div class="space-y-6">
                    <div class="flex items-center">
                        <span class="w-8 text-muted"><Icon name="location" size={20} /></span>
                        <span class="text-secondary">Mar del Plata, Buenos Aires, Argentina</span>
                    </div>
                    <div class="flex items-center">
                        <span class="w-8 text-muted"><Icon name="email" size={20} /></span>
                        <a href="mailto:matias@cappato.dev" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors">matias@cappato.dev</a>
                    </div>
                    <div class="flex items-center">
                        <span class="w-8 text-muted"><Icon name="github" size={20} /></span>
                        <a href="https://github.com/cappato" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors">github.com/cappato</a>
                    </div>
                    <div class="flex items-center">
                        <span class="w-8 text-muted"><Icon name="linkedin" size={20} /></span>
                        <a href="https://www.linkedin.com/in/matiascappato/" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors">linkedin.com/in/matiascappato</a>
                    </div>
                </div>

                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="https://github.com/cappato" class="px-4 py-2 flex items-center text-sm sm:text-base font-medium border border-primary text-primary hover:bg-secondary rounded-lg transition-colors">
                        <span class="mr-2"><Icon name="github" size={18} /></span> GitHub Profile
                    </a>
                    <a href="https://www.linkedin.com/in/matiascappato/" class="px-4 py-2 flex items-center text-sm sm:text-base font-medium border border-primary text-primary hover:bg-secondary rounded-lg transition-colors">
                        <span class="mr-2"><Icon name="linkedin" size={18} /></span> LinkedIn
                    </a>
                    <a href="mailto:matias@cappato.dev"
                       class="px-4 py-2 flex items-center text-sm sm:text-base font-medium bg-blue-600 text-white hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 rounded-lg transition-colors"
                       aria-label="Enviar correo electrÃ³nico">
                        <span class="mr-2"><Icon name="email" size={18} /></span> Send Email
                    </a>
                </div>
            </ContentWidth>
        </Card>
    </ContentWidth>
</ContentContainer>



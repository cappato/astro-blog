---
import Card from '../ui/Card.astro';
import ContentContainer from '../layout/ContentContainer.astro';
import ContentWidth from '../layout/ContentWidth.astro';
---

<!-- Education Section -->
<ContentContainer as="section" id="education" className="py-10 bg-primary" width="standard">
    <ContentWidth>
        <h2 class="text-3xl font-bold mb-6 pb-2 text-primary">Education</h2>
    </ContentWidth>

    <ContentWidth className="space-y-6">
        <Card variant="default">
            <h3 class="text-xl sm:text-2xl font-bold text-primary">National University of Mar del Plata</h3>
            <h4 class="text-lg sm:text-xl mb-2 text-secondary">System Analyst</h4>
            <p class="mb-4 text-muted">2016 - 2019</p>
            <p class="text-secondary">Completed.</p>
        </Card>

        <Card variant="default">
            <h3 class="text-xl sm:text-2xl font-bold text-primary">University Center of Exact Sciences, Tandil</h3>
            <h4 class="text-lg sm:text-xl mb-2 text-secondary">System Engineering (in progress)</h4>
            <p class="mb-4 text-muted">Currently enrolled</p>
            <p class="text-secondary">Degree: Completed finals of the first year and two courses from the second year.</p>
        </Card>
    </ContentWidth>
</ContentContainer> <!-- Education Section -->
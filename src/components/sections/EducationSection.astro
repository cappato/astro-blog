---
import Card from '../ui/Card.astro';
import ContentContainer from '../layout/ContentContainer.astro';
import ContentWidth from '../layout/ContentWidth.astro';
---

<!-- Education Section -->
<ContentContainer as="section" className="py-10" width="standard">
    <ContentWidth>
        <h2 class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-6 border-b border-gray-200 dark:border-gray-700 pb-2">Education</h2>
    </ContentWidth>

    <ContentWidth className="space-y-6">
        <Card variant="default">
            <h3 class="text-xl sm:text-2xl font-bold text-green-600 dark:text-green-400">National University of Mar del Plata</h3>
            <h4 class="text-lg sm:text-xl text-gray-900 dark:text-white mb-2">System Analyst</h4>
            <p class="text-gray-900 dark:text-white mb-4">2016 - 2019</p>
            <p class="text-gray-900 dark:text-white">Completed.</p>
        </Card>

        <Card variant="default">
            <h3 class="text-xl sm:text-2xl font-bold text-green-600 dark:text-green-400">University Center of Exact Sciences, Tandil</h3>
            <h4 class="text-lg sm:text-xl text-gray-900 dark:text-white mb-2">System Engineering (in progress)</h4>
            <p class="text-gray-900 dark:text-white mb-4">Currently enrolled</p>
            <p class="text-gray-900 dark:text-white">Degree: Completed finals of the first year and two courses from the second year.</p>
        </Card>
    </ContentWidth>
</ContentContainer> <!-- Education Section -->
---
import Icon from '../ui/Icon.astro';
import Card from '../ui/Card.astro';
---

<!-- About Section -->
<section id="about" class="container mx-auto px-6 sm:px-4 py-10">
    <h2 class="text-3xl font-bold text-primary mb-6 border-b border-surface-700 pb-2 max-w-4xl mx-auto">About me</h2>

    <Card className="max-w-4xl mx-auto" variant="default">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
            <div class="w-32 h-32 md:w-48 md:h-48 rounded-full overflow-hidden bg-muted dark:bg-muted-dark flex-shrink-0">
                <!-- Real profile image -->
                <img src="/images/profile.webp" alt="Matías Sebastián Cappato" class="w-full h-full object-cover" width="192" height="192" loading="eager">
            </div>
            <div class="flex-1">
                <h1 class="text-2xl md:text-4xl font-bold text-primary mb-2 text-center md:text-left">Matías Sebastián Cappato</h1>
                <h2 class="text-lg md:text-2xl text-secondary mb-4 text-center md:text-left">System Analyst | Full Stack Developer</h2>
                <div class="space-y-2 text-content">
                    <p class="flex items-center text-sm sm:text-base">
                        <span class="w-6 mr-2"><Icon name="location" size={16} /></span>
                        Mar del Plata, Buenos Aires, Argentina
                    </p>
                    <p class="flex items-center text-sm sm:text-base">
                        <span class="w-6 mr-2"><Icon name="email" size={16} /></span>
                        <a href="mailto:matias@cappato.dev" class="text-primary-400 hover:text-primary-300 hover:underline transition-colors">matias@cappato.dev</a>
                    </p>
                    <p class="flex items-center text-sm sm:text-base">
                        <span class="w-6 mr-2"><Icon name="github" size={16} /></span>
                        <a href="https://github.com/cappato" class="text-primary-400 hover:text-primary-300 hover:underline transition-colors">github.com/cappato</a>
                    </p>
                    <p class="flex items-center text-sm sm:text-base">
                        <span class="w-6 mr-2"><Icon name="linkedin" size={16} /></span>
                        <a href="https://www.linkedin.com/in/matiascappato/" class="text-primary-400 hover:text-primary-300 hover:underline transition-colors">linkedin.com/in/matiascappato</a>
                    </p>
                </div>
                <div class="mt-6 flex flex-wrap justify-center md:justify-start gap-3">
                    <a href="#"
                       class="bg-primary-600 hover:bg-primary-700 text-white px-3 py-2 rounded-lg transition-colors text-sm sm:text-base font-medium"
                       aria-label="Descargar currículum">
                       Download Resume
                    </a>
                    <a href="#contact"
                       class="bg-button hover:bg-button-hover text-white px-3 py-2 rounded-lg transition-colors text-sm sm:text-base font-medium">
                       Contact
                    </a>
                </div>
            </div>
        </div>
    </Card>
</section>






---
import ExperienceCard from './experience/ExperienceCard.astro';
import { experienceData } from './experience/experienceData';
import ContentContainer from '../layout/ContentContainer.astro';
import ContentWidth from '../layout/ContentWidth.astro';
---

<!-- Experience Section -->
<ContentContainer as="section" id="experience" className="py-10 bg-primary">
    <ContentWidth width="standard">
        <h2 class="text-3xl font-bold mb-6 pb-2 text-primary">Professional Experience</h2>

        <div class="space-y-10">
            {experienceData.map((experience) => (
                <ExperienceCard experience={experience} />
            ))}
        </div>
    </ContentWidth>
</ContentContainer>



---
import Icon from './Icon.astro';
---

<!-- Contact Section -->
<section id="contact" class="container mx-auto px-6 sm:px-4 py-10">
    <h2 class="text-3xl font-bold text-primary mb-6 border-b border-gray-700 pb-2 max-w-3xl mx-auto">Contact</h2>
    
    <div class="max-w-3xl mx-auto">
        <div class="bg-gray-800 rounded-lg p-4 sm:p-6 shadow-lg">
            <div class="max-w-2xl mx-auto">
                <h3 class="text-xl sm:text-2xl font-bold text-secondary mb-4">Get In Touch</h3>
                <p class="text-gray-300 mb-8">Feel free to reach out if you'd like to discuss potential opportunities or just want to connect.</p>
                
                <div class="space-y-6">
                    <div class="flex items-center">
                        <span class="w-8 text-primary"><Icon name="location" size={20} /></span>
                        <span class="text-gray-300">Mar del Plata, Buenos Aires, Argentina</span>
                    </div>
                    <div class="flex items-center">
                        <span class="w-8 text-primary"><Icon name="email" size={20} /></span>
                        <a href="mailto:matias@cappato.dev" class="text-blue-400 hover:underline transition">matias@cappato.dev</a>
                    </div>
                    <div class="flex items-center">
                        <span class="w-8 text-primary"><Icon name="github" size={20} /></span>
                        <a href="https://github.com/cappato" class="text-blue-400 hover:underline">github.com/cappato</a>
                    </div>
                    <div class="flex items-center">
                        <span class="w-8 text-primary"><Icon name="linkedin" size={20} /></span>
                        <a href="https://www.linkedin.com/in/matiascappato/" class="text-blue-400 hover:underline">linkedin.com/in/matiascappato</a>
                    </div>
                </div>
                
                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="https://github.com/cappato" class="bg-gray-700 hover:bg-gray-600 text-white px-3 py-2 rounded-lg transition flex items-center text-sm sm:text-base">
                        <span class="mr-2"><Icon name="github" size={18} /></span> GitHub Profile
                    </a>
                    <a href="https://www.linkedin.com/in/matiascappato/" class="bg-gray-700 hover:bg-gray-600 text-white px-3 py-2 rounded-lg transition flex items-center text-sm sm:text-base">
                        <span class="mr-2"><Icon name="linkedin" size={18} /></span> LinkedIn
                    </a>
                    <a href="mailto:matias@cappato.dev" 
                       class="bg-blue-700 hover:bg-blue-800 text-white px-3 py-2 rounded-lg transition flex items-center text-sm sm:text-base"
                       aria-label="Enviar correo electrÃ³nico">
                        <span class="mr-2"><Icon name="email" size={18} /></span> Send Email
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>



---
/**
 * Favicon System Component
 * Centralized favicon management with configuration-driven approach
 * Supports all devices and browsers with theme color integration
 */

import { FAVICON_CONFIG } from '../../config/site.ts';

interface Props {
  themeColor?: string;
  msApplicationTileColor?: string;
}

const {
  themeColor = FAVICON_CONFIG.themeColor.light,
  msApplicationTileColor = FAVICON_CONFIG.msApplicationTileColor
} = Astro.props;

const config = FAVICON_CONFIG;
---

<!-- Apple Touch Icon -->
<link
  rel="apple-touch-icon"
  sizes={config.sizes.appleTouchIcon}
  href={config.paths.appleTouchIcon}
>

<!-- Standard Favicons -->
<link
  rel="icon"
  type={config.mimeTypes.png}
  sizes={config.sizes.favicon32}
  href={config.paths.favicon32}
>
<link
  rel="icon"
  type={config.mimeTypes.png}
  sizes={config.sizes.favicon16}
  href={config.paths.favicon16}
>

<!-- Web App Manifest -->
<link rel="manifest" href={config.paths.manifest}>

<!-- Shortcut Icon (ICO fallback) -->
<link rel="shortcut icon" href={config.paths.shortcutIcon}>

<!-- Android Chrome Icons -->
<link
  rel="icon"
  type={config.mimeTypes.png}
  sizes={config.sizes.androidChrome192}
  href={config.paths.androidChrome192}
>
<link
  rel="icon"
  type={config.mimeTypes.png}
  sizes={config.sizes.androidChrome512}
  href={config.paths.androidChrome512}
>

<!-- Theme Colors for Mobile Browsers -->
<meta name="theme-color" content={themeColor}>
<meta name="msapplication-TileColor" content={msApplicationTileColor}>



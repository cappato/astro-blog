---

<!-- Structured Data para SEO -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<!-- Author Card -->
<div class={`author-card author-card--${variant} ${className}`}>
  
  {variant === 'inline' ? (
    <!-- Inline variant (para bylines) -->
    <div class="author-card__inline">
      <img 
        src={author.avatar} 
        alt={`Foto de ${author.name}`}
        class="author-card__avatar author-card__avatar--small"
        width="32"
        height="32"
        loading="lazy"
      />
      <div class="author-card__inline-info">
        <span class="author-card__name">{author.name}</span>
        <span class="author-card__title">{author.title}</span>
      </div>
    </div>
  ) : (
    <!-- Full/Compact variants -->
    <div class="author-card__main">
      <div class="author-card__header">
        <img 
          src={author.avatar} 
          alt={`Foto de ${author.name}`}
          class="author-card__avatar"
          width={variant === 'compact' ? "64" : "80"}
          height={variant === 'compact' ? "64" : "80"}
          loading="lazy"
        />
        
        <div class="author-card__info">
          <h3 class="author-card__name">{author.name}</h3>
          <p class="author-card__title">{author.title}</p>
          
          {variant === 'full' && (
            <div class="author-card__meta">
              <span class="author-card__location">游늸 {author.location}</span>
              <span class="author-card__experience">游눺 {author.experience}</span>
            </div>
          )}
        </div>
      </div>
      
      {variant === 'full' && (
        <div class="author-card__content">
          <p class="author-card__bio">{author.bio}</p>
          
          <div class="author-card__specialties">
            <h4 class="author-card__specialties-title">Especialidades:</h4>
            <div class="author-card__tags">
              {author.specialties.map(specialty => (
                <span class="author-card__tag">{specialty}</span>
              ))}
            </div>
          </div>
          
          <div class="author-card__stats">
            <div class="author-card__stat">
              <span class="author-card__stat-number">{author.stats.articles}</span>
              <span class="author-card__stat-label">Art칤culos</span>
            </div>
            <div class="author-card__stat">
              <span class="author-card__stat-number">{author.stats.projects}</span>
              <span class="author-card__stat-label">Proyectos</span>
            </div>
            <div class="author-card__stat">
              <span class="author-card__stat-number">{author.stats.experience}</span>
              <span class="author-card__stat-label">Experiencia</span>
            </div>
          </div>
        </div>
      )}
      
      <!-- Social Links -->
      <div class="author-card__social">
        <a 
          href={author.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="author-card__social-link"

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": author.name,
  "jobTitle": author.title,
  "description": author.bio,
  "image": `https://cappato.dev${author.avatar}`,
  "url": author.website,
  "sameAs": Object.values(author.social),
  "knowsAbout": author.specialties,
  "worksFor": {
    "@type": "Organization",
    "name": "Freelance"
  }

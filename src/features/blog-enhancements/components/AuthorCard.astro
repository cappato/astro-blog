---
/**
 * Blog Enhancement Feature - Author Card Component (Enhanced)
 *
 * Módulo de autor mejorado con múltiples variantes y configuración avanzada
 * Soporta biografías cortas/extendidas, diferentes layouts y tamaños de imagen
 */

import type { AuthorCardProps } from '../types/author.types';
import {
  AUTHOR_PROFILE,
  getAuthorVariantConfig,
  getAuthorBio,
  getAuthorSocialLinks,
  generateAuthorStructuredData
} from '../config/author.config';
import Card from '../../../components/ui/Card.astro';

interface Props extends AuthorCardProps {}

const {
  variant = 'full',
  className = '',
  showBio,
  showStats,
  showAchievements,
  showSkills,
  showSocial,
  maxSocialLinks,
  layout,
  imageSize,
  customConfig
} = Astro.props;

// Obtener configuración de la variante
const variantConfig = getAuthorVariantConfig(variant);

// Aplicar configuración personalizada si se proporciona
const finalConfig = customConfig ? { ...variantConfig, ...customConfig } : variantConfig;

// Resolver configuración final
const resolvedConfig = {
  showBio: showBio !== undefined ? showBio : finalConfig.showBio,
  showStats: showStats !== undefined ? showStats : finalConfig.showStats,
  showAchievements: showAchievements !== undefined ? showAchievements : finalConfig.showAchievements,
  showSkills: showSkills !== undefined ? showSkills : finalConfig.showSkills,
  showSocial: showSocial !== undefined ? showSocial : finalConfig.showSocial,
  maxSocialLinks: maxSocialLinks !== undefined ? maxSocialLinks : finalConfig.maxSocialLinks,
  layout: layout || finalConfig.layout,
  imageSize: imageSize || finalConfig.imageSize
};

// Obtener datos del autor
const author = AUTHOR_PROFILE;
const bioText = resolvedConfig.showBio ? getAuthorBio(resolvedConfig.showBio) : '';
const socialLinks = resolvedConfig.showSocial ? getAuthorSocialLinks(resolvedConfig.maxSocialLinks) : {};

// Structured data para SEO
const structuredData = generateAuthorStructuredData();
---

<!-- Structured Data para SEO -->
<script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)} />

<!-- Author Card con diseño moderno y horizontal -->
{variant === 'inline' ? (
  <!-- Inline variant (para bylines) -->
  <div class={`flex items-center gap-3 ${className}`}>
    <div class="w-8 h-8 rounded-full overflow-hidden border-2 border-gray-200 dark:border-gray-700 flex-shrink-0">
      <img
        src={author.images.avatar}
        alt={`Foto de ${author.personal.name}`}
        class="w-full h-full object-cover"
        width="32"
        height="32"
        loading="lazy"
      />
    </div>
    <div class="flex flex-col">
      <span class="text-sm font-semibold text-gray-900 dark:text-white">{author.personal.name}</span>
      <span class="text-xs text-gray-600 dark:text-gray-300">{author.personal.title}</span>
    </div>
  </div>
) : (
  <!-- Card variants con diseño horizontal optimizado -->
  <Card variant="default" className={`author-card-modern ${className}`}>
    <div class="flex items-start gap-4">
      <!-- Avatar -->
      <div class={`rounded-full overflow-hidden border-2 border-gray-200 dark:border-gray-700 flex-shrink-0 ${
        resolvedConfig.imageSize === 'small' ? 'w-12 h-12' :
        resolvedConfig.imageSize === 'medium' ? 'w-16 h-16' :
        resolvedConfig.imageSize === 'large' ? 'w-20 h-20' : 'w-14 h-14'
      }`}>
        <img
          src={author.images.avatar}
          alt={`Foto de ${author.personal.name}`}
          class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
          loading="lazy"
        />
      </div>

      <!-- Content - Layout horizontal optimizado -->
      <div class="flex-1 min-w-0">
        <!-- Header info -->
        <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 mb-3">
          <div class="flex-1 min-w-0">
            <h3 class="text-lg font-bold text-blue-600 dark:text-blue-400 mb-1">{author.personal.name}</h3>
            <p class="text-sm font-medium text-green-600 dark:text-green-400 mb-1">{author.personal.title}</p>

            {(variant === 'full' || variant === 'standard') && (
              <div class="flex flex-wrap items-center gap-3 text-xs text-gray-600 dark:text-gray-300">
                <span class="flex items-center gap-1">
                  📍 {author.personal.location}
                </span>
                <span class="flex items-center gap-1">
                  💼 {author.experience.years} experiencia
                </span>
              </div>
            )}
          </div>

          <!-- Social links compactos -->
          {resolvedConfig.showSocial && Object.keys(socialLinks).length > 0 && (
            <div class="flex items-center gap-2 flex-shrink-0">
              {socialLinks.github && (
                <a
                  href={socialLinks.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-8 h-8 rounded-lg bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 hover:bg-blue-600 dark:hover:bg-blue-500 hover:text-white transition-all duration-200 flex items-center justify-center text-gray-600 dark:text-gray-300"
                  aria-label={`GitHub de ${author.personal.firstName}`}
                >
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
              {socialLinks.linkedin && (
                <a
                  href={socialLinks.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-8 h-8 rounded-lg bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 hover:bg-blue-600 dark:hover:bg-blue-500 hover:text-white transition-all duration-200 flex items-center justify-center text-gray-600 dark:text-gray-300"
                  aria-label={`LinkedIn de ${author.personal.firstName}`}
                >
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              )}
              {socialLinks.email && (
                <a
                  href={`mailto:${socialLinks.email}`}
                  class="w-8 h-8 rounded-lg bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 hover:bg-blue-600 dark:hover:bg-blue-500 hover:text-white transition-all duration-200 flex items-center justify-center text-gray-600 dark:text-gray-300"
                  aria-label={`Email de ${author.personal.firstName}`}
                >
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-.904.732-1.636 1.636-1.636h.91L12 10.09l9.455-6.269h.909c.904 0 1.636.732 1.636 1.636z"/>
                  </svg>
                </a>
              )}
            </div>
          )}
        </div>

        <!-- Bio compacta -->
        {resolvedConfig.showBio && bioText && (
          <div class="mb-3">
            <p class="text-sm text-gray-600 dark:text-gray-300 leading-relaxed">{bioText}</p>
          </div>
        )}

        <!-- Skills/Specialties en layout horizontal compacto -->
        {resolvedConfig.showSkills && (
          <div class="mb-3">
            <h4 class="text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase tracking-wide mb-2">Especialidades</h4>
            <div class="flex flex-wrap gap-1.5">
              {author.experience.specialties.slice(0, variant === 'compact' ? 3 : 5).map(specialty => (
                <span class="px-2 py-1 text-xs font-medium bg-blue-600/10 dark:bg-blue-500/10 text-blue-600 dark:text-blue-400 rounded-md border border-blue-600/20 dark:border-blue-500/20">
                  {specialty}
                </span>
              ))}
            </div>
          </div>
        )}

        <!-- Achievements compactos solo para variant full -->
        {resolvedConfig.showAchievements && variant === 'full' && (
          <div class="mb-3">
            <h4 class="text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase tracking-wide mb-2">Logros destacados</h4>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-1.5">
              {author.experience.achievements.slice(0, 4).map(achievement => (
                <div class="flex items-start gap-2 text-xs text-gray-600 dark:text-gray-300">
                  <span class="text-blue-600 dark:text-blue-400 mt-0.5">•</span>
                  <span class="leading-relaxed">{achievement}</span>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Stats compactas -->
        {resolvedConfig.showStats && (
          <div class="flex items-center gap-4 pt-3 border-t border-gray-200 dark:border-gray-700">
            <div class="text-center">
              <div class="text-lg font-bold text-blue-600 dark:text-blue-400">{author.stats.articles}</div>
              <div class="text-xs text-gray-600 dark:text-gray-300">Artículos</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-bold text-blue-600 dark:text-blue-400">{author.stats.projects}</div>
              <div class="text-xs text-gray-600 dark:text-gray-300">Proyectos</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-bold text-blue-600 dark:text-blue-400">{author.stats.experience}</div>
              <div class="text-xs text-gray-600 dark:text-gray-300">Experiencia</div>
            </div>
          </div>
        )}
      </div>
    </div>
  </Card>
)}



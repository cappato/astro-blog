</div>

<style>
  .author-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 2rem 0;
    transition: all 0.2s ease;
  }
  
  .author-card:hover {
    border-color: var(--color-primary-alpha);
    box-shadow: 0 4px 12px var(--color-shadow);
  }
  
  /* Inline variant */
  .author-card--inline {
    background: none;
    border: none;
    padding: 0;
    margin: 0;
  }
  
  .author-card__inline {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .author-card__inline-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }
  
  .author-card__inline .author-card__name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
  }
  
  .author-card__inline .author-card__title {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }
  
  /* Compact variant */
  .author-card--compact {
    padding: 1rem;
    margin: 1.5rem 0;
  }
  
  /* Avatar */
  .author-card__avatar {
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--color-border);
  }
  
  .author-card__avatar--small {
    width: 32px;
    height: 32px;
    border-width: 2px;
  }
  
  /* Header */
  .author-card__header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  .author-card__info {
    flex: 1;
  }
  
  .author-card__name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 0.25rem 0;
  }
  
  .author-card__title {
    font-size: 0.875rem;
    color: var(--color-primary);
    font-weight: 500;
    margin: 0 0 0.5rem 0;
  }
  
  .author-card__meta {
    display: flex;
    gap: 1rem;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
  }
  
  /* Content */
  .author-card__bio {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .author-card__specialties {
    margin-bottom: 1rem;
  }
  
  .author-card__specialties-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 0.5rem 0;
  }
  
  .author-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .author-card__tag {
    background: var(--color-primary-alpha);
    color: var(--color-primary);
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  /* Stats */
  .author-card__stats {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1rem;
    padding: 1rem 0;
    border-top: 1px solid var(--color-border);
  }
  
  .author-card__stat {
    text-align: center;
  }
  
  .author-card__stat-number {
    display: block;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
  }
  
  .author-card__stat-label {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Social Links */
  .author-card__social {
    display: flex;
    gap: 0.75rem;
  }
  
  .author-card__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--color-surface-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .author-card__social-link:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }
  
  /* Dark mode */
  :global(.dark) .author-card {
    background: var(--color-surface-dark);
    border-color: var(--color-border-dark);
  }
  
  :global(.dark) .author-card__avatar {
    border-color: var(--color-border-dark);
  }
  
  :global(.dark) .author-card__stats {
    border-top-color: var(--color-border-dark);
  }
  
  :global(.dark) .author-card__social-link {
    background: var(--color-surface-secondary-dark);
    border-color: var(--color-border-dark);
  }
  
  /* Mobile responsive */
  @media (max-width: 640px) {
    .author-card {
      padding: 1rem;
    }
    
    .author-card__header {
      flex-direction: column;
      text-align: center;
      gap: 0.75rem;
    }
    
    .author-card__meta {
      justify-content: center;
    }
    
    .author-card__stats {
      gap: 1rem;
    }
    
    .author-card__social {
      justify-content: center;
    }
  }
</style>

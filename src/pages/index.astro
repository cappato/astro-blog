---
import MainLayout from '../layouts/MainLayout.astro';
import AboutSection from '../components/sections/AboutSection.astro';
import ExperienceSection from '../components/sections/ExperienceSection.astro';
import EducationSection from '../components/sections/EducationSection.astro';
import SkillsSection from '../components/sections/SkillsSection.astro';
import AchievementsSection from '../components/sections/AchievementsSection.astro';
import HobbiesSection from '../components/sections/HobbiesSection.astro';
import ContactSection from '../components/sections/ContactSection.astro';
import { SITE_INFO } from '../config/site.ts';
---

<MainLayout title={SITE_INFO.title}>
    <AboutSection />
    <ExperienceSection />
    <EducationSection />
    <SkillsSection />
    <AchievementsSection />
    <HobbiesSection />
    <ContactSection />

    <!-- Script de navegación solo para la página principal -->
    <script src="../scripts/navigation.ts"></script>
</MainLayout>

